@*@using EntityLayer.Concrete
@model List<Comment>*@

@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@{
    string renk = "";
}

<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>

                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Başlık</th>
                                    <th>Blog</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th class="text-lg-right">--- Blog ---</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    var danger = new int[] { 0, 1, 2, 3 };
                                    var warning = new int[] { 4, 5, 6, 7 };
                                    var navy = new int[] { 8, 9, 10 };

                                    if (danger.Contains(item.BlogScore))
                                    {
                                        renk = "text-danger";
                                    }
                                    else if (warning.Contains(item.BlogScore))
                                    {
                                        renk = "text-warning";
                                    }
                                    else if (navy.Contains(item.BlogScore))
                                    {
                                        renk = "text-navy";
                                    }
                                    else
                                    {
                                        renk = "text-black";
                                    }

                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.UserName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Blog.Title</td>
                                        <td class="@renk"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                                        <td><span class="pie"></span>@(((DateTime)item.Date).ToString("dd MMMM yyyy"))</td>
                                        <td> <button class="btn btn-outline-danger" onclick="deleteComment(@item.Id)"> Sil </button></td>

                                        <td class="text-lg-right"><a href="/blog/BlogReadAll/@item.BlogId/" class="btn btn-outline-primary">Blog'a Git'</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

</html>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        function deleteComment(id) {

            Swal.fire({
                title: 'Emin misiniz !',
                text: "Yorumu silmek istediğinize emin misiniz ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, SİL',
                cancelButtonText: "Vazgeç",

            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        type: "post",
                        url: "/Admin/AdminComment/DeleteComment/" + id,

                        success: function () {
                            Swal.fire(
                                'SİLİNDİ ! ',
                                'Yorum başarılı bir şekilde silindi.',
                                'success'
                            )
                            //setTimeout('', 5000);
                        }

                    });
                    location.reload();

                }
            })


        }

    </script>

}